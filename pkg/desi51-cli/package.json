{
	"name": "desi51-cli",
	"version": "0.5.10",
	"description": "The application cli as frontend of desi51",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame51.git"
	},
	"homepage": "https://charlyoleg2.github.io/parame51/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"3D",
		"CAD"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/desi51-cli.d.ts",
			"default": "./dist/desi51-cli.js"
		}
	},
	"bin": "./dist/desi51-cli.js",
	"files": [
		"dist/",
		"!dist/**/*.d.ts",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/desi51-cli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": false,
		"sourcemap": false,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"test:bats": "bats test/test1.bats",
		"ci": "run-s check build pretty lint test:unit:once test:bats",
		"run": "dist/desi51-cli.js",
		"clean": "shx rm -fr build dist node_modules output"
	},
	"dependencies": {
		"desi51": "^0.5.18",
		"geomcli": "^0.5.49",
		"geometrix": "^0.5.46"
	},
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@types/eslint__js": "^8.42.3",
		"bats": "^1.11.0",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"shx": "^0.3.4",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.0",
		"vitest": "^2.0.5"
	}
}
