{
	"name": "desi51",
	"version": "0.5.12",
	"description": "Example designs made with parametrix",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/parame51.git"
	},
	"homepage": "https://github.com/charlyoleg2/parame51/tree/main/pkg/desi51#readme",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"author": "charlyoleg",
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint test:unit:once",
		"svgo1": "svgo --config ./svgo.config.cjs -f src/myGroup1/svg -o export_svg",
		"svgo2": "svgo --config ./svgo.config.cjs -f src/myGroup2/svg -o export_svg",
		"svgCp": "shx cp export_svg/*.svg ../desi51-ui/static",
		"svgo": "run-s svgo1 svgo2 svgCp",
		"browserBundleA": "esbuild src/myGroup1/myPartA.ts --bundle --format=esm --outfile=dist2/myPartA.js",
		"browserBundleAll": "esbuild dist/index.js --bundle --format=esm --outfile=dist2/desi51.js",
		"clean": "shx rm -fr dist dist2 node_modules"
	},
	"dependencies": {
		"geometrix": "^0.5.13"
	},
	"devDependencies": {
		"@types/node": "^20.11.6",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"esbuild": "^0.19.12",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.4",
		"shx": "^0.3.4",
		"svgo": "^3.2.0",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"vitest": "^1.2.1"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"types": "./dist/index.d.ts",
	"type": "module"
}
